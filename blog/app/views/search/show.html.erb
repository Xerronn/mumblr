<div class="form_article">
<h2>Results</h2>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Author</th>
  </tr>
 
  <% @articles.each do |article| %>
  
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><% if article.user %>
            <%= article.user.name %>
          <% end %>
      </td>
      
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
      <td><%= link_to 'Destroy',
                                article_path(article),
                                method: :delete,
                                data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  
</table>

  <% if @articles.blank? %>
    <h4>There are no articles containing the term '<%= params[:search] %>'.</h4>
  <% end %>
  </div>